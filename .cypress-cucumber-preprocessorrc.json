{
  "json": {
    "enabled": true,
    "output": "reports/json/log.json",
    "formatter": "cucumber-json-formatter"
  },
  "messages": {
    "enabled": true,
    "output": "reports/json/messages.ndjson"
  },
  "html": {
    "enabled": true
  },
  "stepDefinitions": [
    "[filepath]/**/*.{js,ts}",
    "[filepath].{js,ts}",
    "cypress/e2e/stepDefinitions/*.{js,ts}",
    "[filepath]\\***.{js,ts}",
    "[filepath].{js,ts}",
    "cypress\\e2e\\stepDefinitions\\*.{js,ts}"
  ]
}
